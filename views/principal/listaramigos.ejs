<%-include('./cabecalho.ejs')%>
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Listar Amigos</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="x_panel">
                <div class="x_content">
                    <div class="clearfix"></div>
                    <div class="clearfix"></div>

                    <!--INICIO AMIGO-->

                    <%Usuarios.forEach(function(usuario){%>
                    <div class="col-md-4 col-sm-4 profile_details">
                        <div class="well profile_view">
                            <div class="col-sm-12">
                                <div class="left col-sm-7">
                                    <h2><%=usuario.nome%></h2>
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-building"></i> Email: <%=usuario.email%> </li>
                                    </ul>
                                </div>
                                <div class="right col-sm-5 text-center">
                                    <%if(!usuario.foto){%>
                                    <img src="images/user.png" alt="" class="img-circle img-fluid">
                                    <%}%>
                                            <%if(usuario.foto){%>
                                    <img src="<%=usuario.foto%>" alt="..." class="img-circle img-fluid center-cropped1">
                                    <%}%>   
                                </div>
                            </div>
                            <div class=" bottom text-center">
                                <div class=" col-sm-12 emphasis">

                                    <a href="/desfazer/<%=usuario.id%>" class="btn btn-danger btn-sm">
                                    <i class="fa fa-user"></i> Desfazer Amizade
                                    </a>
                                    <a href="/perfil/<%=usuario.id%>" class="btn btn-primary btn-sm">
                                        <i class="fa fa-user"> </i> Perfil
                                    </a>
                                    <br><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>

                    <!--FIM AMIGO-->

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<%-include('./rodape.ejs')%>